<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FiguresMain">
    <Style x:Key="MainFont">
        <Setter Property="Control.FontSize" Value="12"></Setter>
        <Setter Property="ItemsControl.FontWeight" Value="Bold"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="BlueViolet"></Setter>
    </Style>
    <Style x:Key="Button">
        <Setter Property="Control.FontSize" Value="12"></Setter>
        <Setter Property="ItemsControl.FontWeight" Value="Bold"></Setter>
        <Setter Property="ItemsControl.Foreground" Value="BlueViolet"></Setter>
        <Setter Property="ItemsControl.Background" Value="GhostWhite"></Setter>
    </Style>
    <Style TargetType="Canvas">
        <Setter Property="Background" Value="White"></Setter>
    </Style>
</ResourceDictionary>